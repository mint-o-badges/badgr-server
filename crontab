0 0 * * * /bin/sh -c 'echo "[$(date)] Clearing access tokens" >> /var/log/cron_cleartokens.log 2>&1 && /badgr_server/venv/bin/python /badgr_server/manage.py cleartokens | sed "s/^/[$(date)] /" >> /var/log/cron_cleartokens.log 2>&1'
1 0 * * * /bin/sh -c 'echo "[$(date)] Sending badge request emails" >> /var/log/cron_qr_badgerequests.log 2>&1 && /badgr_server/venv/bin/python /badgr_server/manage.py send_badgerequest_mails | sed "s/^/[$(date)] /" >> /var/log/cron_qr_badgerequests.log 2>&1'

0 0 * * * /bin/sh -c 'echo "[$(date)] Clearing altcha challenges" >> /var/log/cron_clear_altcha.log 2>&1 && /badgr_server/venv/bin/python /badgr_server/manage.py cleanup_altcha  | sed "s/^/[$(date)] /" >> /var/log/cron_clear_altcha.log 2>&1'
